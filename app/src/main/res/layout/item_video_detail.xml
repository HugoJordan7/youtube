<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/video_detail_author"
        android:layout_width="150dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="16:9"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        tools:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/video_detail_actions"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_margin="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/video_detail_author"
        android:src="@drawable/ic_more"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/video_detail_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/spam"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        android:maxLines="2"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/video_detail_author"
        app:layout_constraintEnd_toStartOf="@id/video_detail_actions"
        app:layout_constraintTop_toTopOf="@id/video_detail_author"/>

    <TextView
        android:id="@+id/video_detail_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:maxLines="1"
        android:text="@string/spam"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/video_detail_author"
        app:layout_constraintEnd_toStartOf="@id/video_detail_actions"
        app:layout_constraintTop_toBottomOf="@id/video_detail_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>