<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_main">

    <View
        android:id="@+id/video_layer"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@android:color/background_dark"
        android:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/video_player"
        android:src="@android:color/holo_red_dark"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <LinearLayout
        android:id="@+id/video_player_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/video_player"
        app:layout_constraintBottom_toBottomOf="@id/video_player"
        app:layout_constraintStart_toStartOf="@id/video_player"
        app:layout_constraintEnd_toEndOf="@id/video_player"
        android:orientation="vertical">

        <TextView
            android:id="@+id/video_title"
            android:text="video title video title video title video title video title video title video title video title video title"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/video_subtitle"
            android:text="video title video title video title video title video title video title video title video title video title"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <SurfaceView
        android:id="@+id/video_surface"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

</merge>