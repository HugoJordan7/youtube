<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/video_thumbnail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        tools:background="@drawable/ic_launcher_background"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/video_author"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        tools:background="@drawable/ic_launcher_background"
        app:layout_constraintTop_toBottomOf="@id/video_thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/video_actions"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_margin="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/video_author"
        android:src="@drawable/ic_more"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hugo JordanHugo JordanHugo JordanHugo JordanHugo JordanHugo JordanHugo JordanHugo JordanHugo JordanHugo JordanHugo JordanHugo JordanHugo JordanHugo JordanHugo JordanHugo Jordan"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        android:maxLines="2"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/video_author"
        app:layout_constraintEnd_toStartOf="@id/video_actions"
        app:layout_constraintTop_toTopOf="@id/video_author"/>

    <TextView
        android:id="@+id/video_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:maxLines="1"
        android:text="Hugo JordanHugo JordanHugo JordanHugo JordanHugo JordanHugo JordanHugo JordanHugo Jordan"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/video_author"
        app:layout_constraintEnd_toStartOf="@id/video_actions"
        app:layout_constraintTop_toBottomOf="@id/video_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>